@{
    ViewBag.Title = "Reconocimiento Libros";
}
@{

    WebImage photo = null;
    var newFileName = "";
    var imagePath = "";

    if (IsPost)
    {
        photo = WebImage.GetImageFromRequest();
        if (photo != null)
        {

            newFileName = Path.GetFullPath(photo.FileName);
            imagePath = newFileName;


        }
    }

}


<!DOCTYPE html>
<html>
<head>
    <title>Image Upload</title>
    <style>
        img {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <form action="" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend> Cargar Imagen </legend>
            <label for="Image">Imagen</label>
            <input type="file" name="Image" id="path" />
            <br />
            <input type="submit" value="Abrir" id="Subir" />
        </fieldset>
    </form>
    <h1>Imagen Cargada</h1>
    @if (imagePath != "")
    {
    <div class="result">
        <img src="@imagePath" alt="image" />

        <input type="button" value="Mostrar Coincidencias" id="Mostrar" />

    </div>
    }
</body>
</html>

@section JavaScript {

    <script type="text/javascript" language="javascript">


         $("#Mostrar").click(function () {



            $(document).location = '@Url.Action("Contact", "Home")';



        });


    </script>

}